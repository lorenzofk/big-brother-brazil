<!DOCTYPE html>
<html lang="en">
<head>
    <title>Votação Big Brother Brasil</title>
    <meta charset="utf-8">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/poll.css">
</head>

<body>

<div class="main">

    <div class="container">

        <div class="row">

            <div class="col-sm-12">

                <div class="bbb-container-top">
                    <span class="sprite logo">&nbsp;</span>
                    <span>QUEM DEVE SER <strong>ELIMINADO</strong>?</span>
                </div>

            </div>

        </div>

        <hr class="dotted-line"/>

        <div class="row">
            <input id="elimination" type="hidden" value="<%= id %>">
            <% for(var i = 0; i < participants.length; i++) {%>

                <div class="col-sm-6">
                    <div class="participant">
                        <span class="participant-name"> <%= participants[i].name %> </span>
                        <div class="participant-<%= i+1 %> photo" data-id="<%= participants[i]._id %>"></div>
                    </div>
                </div>

            <% } %>

            <div class="footer">

                <div class="row">
                    <div class="col-sm-12 text-center">
                        <button class="btn btn-primary"> Envie seu voto agora </button>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>

<script src="/public/js/voting.js"></script>

</body>

</html>